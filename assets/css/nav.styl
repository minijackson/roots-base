nav
	@media not screen
		display none
	width 100%
	height 100%
	border-bottom 2px solid black
	margin-right 5%
	font-size 1.2em

nav > ul
	list-style-type none
	display flex
	flex-wrap wrap

nav > ul > li
	margin-top .5em
	padding-bottom 1em
	display inline-block
	text-align center
	min-width: 7em
	flex 1

nav > ul > li > ul
	display none

nav ul li a
	color blue
	transition color .3s

nav ul li a:hover,
nav ul li a:active
	color navy
