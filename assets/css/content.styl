.content
	font-size 1.3em

.content section
	margin 2em 1em
	min-width 440px

.content section h2
	font-size 2em
	margin 1.5em
	padding .7em
	border-bottom 2px solid black

.content section > ul.wrapping
	@media screen
		display flex
		flex-direction row
		flex-wrap wrap

.content section > ul.wrapping > li
	flex 1
	min-width 10em

.content section > ul.wrapping > li > h3
	margin-bottom .5em

.content section table
	max-width 50em
	margin 0 auto 0 auto

.content section table tr
	border-collapse collapse

.content section table tr th
	border-bottom 2px solid black
	text-align center

.content section table tr th
	padding .4em

.content section table tr td
	padding .4em 2em .4em .4em
